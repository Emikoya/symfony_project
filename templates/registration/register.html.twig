{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{{ form_start(registrationForm) }}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                <!-- Pseudo input -->
                <div class="form-outline mb-4">
                    {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>
                <!-- Confirm Password -->
                {# <div class="form-outline mb-4">
                    {{ form_row(registrationForm.plainPasswordvalidate, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div> #}

                {{ form_row(registrationForm.agreeTerms) }}

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-lg btn-block">Inscription</button>
                <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg btn-block">Connexion</a>

            </div>
            </div>
        </div>
    </section>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    > 
{{ form_end(registrationForm) }}
    
{% endblock %}